<%= will_paginate @reports %>
<div style="width:600px;"  >
  <% if(@reports.size > 0) %>
  <div style="float:left;width:300px;"><%= @place.type  %></div>
  <% if(@place.type != "Village") %>
    <div style="float:right;text-align: right;margin-right: 40px; width:200px;" >
        <%= link_to "Explore more ...", map_view_map_visualizations_path(:place =>params[:id]) %>
    </div>
  <% end %>
  <div class="clear"></div>

  <table style="border:1px solid #ccc;width: 94%;" class="round"  >
    <tr>
      <th> Date </th>
      <th> Species </th>
      <th> Sex </th>
      <th> Age </th>
      <th> Reporter </th>
      <th> Village</th>
      <th> Phone number </th>
      <th> Mobile</th>
    </tr>

    <% @reports.each_with_index do |report,index| %>
      <tr class="<%= (index%2==0)?"pair":"impair" %> " >
        <td> <%= report.created_at.to_datetime.strftime("%Y-%m-%d")  %>   </td>
        <td> <%= get_malaria_type(report.malaria_type) %>  </td>
        <td> <%= report.sex %>  </td>
        <td> <%= report.age %>  </td>
        <td> <%= report.sender.user_name %> </td>
        <td> <%= report.village.name_with_code  %> </td>
        <td> <%= report.sender.phone_number %> </td>
        <td> <%= (report.mobile)?"Yes": "No" %> </td>
      </tr>
    <% end %>
    <tr><td colspan="6" ></td></tr>
  </table>
  <br />
  <% else %>
      <div class="msg-notice round" style="width: 90%;"> No report has been reported </div>
  <% end %>
</div>
<% if(@reports.size > 7) %>
  <br />
  <%= will_paginate @reports %>
<%  end%>
