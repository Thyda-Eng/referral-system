<% content_for :head do %>
	<%= javascript_include_tag 'jquery.validate.min' %>
	<%= javascript_include_tag 'admin/newusers' %>
        <%= javascript_include_tag 'jquery.fancybox-1.3.4'  %>
        <%= stylesheet_link_tag "jquery.fancybox-1.3.4" %>
<% end %>

<h2> Create Users </h2>

<% if @validation_failed %>
	<h3 class="msg-error round"  >Some of the users are invalid, please correct or remove them and try again</h3>
<% end %>

<%= form_for(:admin, :url => "createusers", :html => { :id => 'createusers'}) do |form|  %>
	<table class="table-grid round" >
		<thead>
			<tr>
				<th><%= t("Name") %> </th>
				<th width=180 ><%= t("Email") %>  </th>
				<th><%= t("Password") %>  </th>
				<th width ="100" ><%= t("Phone") %>  </th>
				<th width ="100" ><%= t("Place code") %>  </th>
                                <th><%= t("Role") %>  </th>
				<th> </th>
			</tr>
		</thead>
		<tbody id="bodyRow">
			<%= render :partial => "user", :locals =>{:users => @users} %>
			<tr id="inputRow">
				<%= input_cell "user_name"%>
				<%= input_cell "email" %>
				<%= input_cell "password", :password => true %>
				<%= input_cell "phone_number" %>
				<%= input_cell "place_code" %>
                                <%= select_cell :role , nil, :class =>"input submitable"  %>
				<td>
                                  <%= image_tag "add.png", :class => "clickable", :id => "addMoreUser", :alt => "Add user", :title => "Add user" %>
				</td>
			</tr>
		</tbody>
		<tfoot>
		  <tr>
		    <td colspan="7" align="center" > &nbsp; </td>
		  </tr>
		</tfoot>
	</table>
	<div class="right-content">
	  <%= submit_tag "Submit" ,:class=> "btn" ,:name=> "insertSubmit" %>
	</div>
<%end%>


 <div style="display:none;" >
  <div id="editFormContainer" class="round" >
      <form id="formUserDir" method="post" action="" >
        <table width="400">
          <tbody id="editDirFancy" >
            <tr >
              <td class="inputCell" > <%=label_tag :user_name_dir, "Username" %> </td>
              <%= input_cell :user_name_dir,:class=>"input submitable"  %>
            </tr>
            <tr>
              <td class="inputCell" > <%=label_tag :email_dir, "Email" %> </td>
              <%= input_cell :email_dir, :class=>"input submitable"  %>
            </tr>
            <tr>
              <td class="inputCell" > <%=label_tag :password_dir, "Password" %> </td>
              <%= input_cell :password_dir , :password =>true,:class=>"input submitable" %>
            </tr>
            <tr>
              <td class="inputCell" > <%=label_tag :phone_number_dir, "Phone number" %> </td>
              <%= input_cell :phone_number_dir, :class=>"input submitable"  %>
            </tr>
            <tr>
              <td class="inputCell" > <%=label_tag :place_code_dir, "Place code" %> </td>
              <%= input_cell :place_code_dir, :class=>"input submitable"  %>
            </tr>
            <tr>
              <td class="inputCell" > <%=label_tag :role, "Role" %> </td>
              <%= select_cell :role_dir, nil, :class => "input submitable"  %>
            </tr>


          </tbody>
          <tfoot>
              <tr>
                <td> </td>
                <td align="right"><input type="submit" value="Accept" id="editFormSubmit" />  </td>
              </tr>
            </tfoot>

        </table>
      </form>
  </div>
</div>