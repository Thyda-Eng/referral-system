<% content_for :breadcrumb do %>
  <%=  breadcrumb [
  		{ "Report" => referral_reports_path},
                { "Edit" => nil}
  	] %>
<% end %>
<% url = referral_report_path(@report, :t => params[:t])  %>
<%=render_errors_for @report %>
<%= form_for(@report, :url => url) do |form| %>
  <%=tag_row do %>
    <%= form.label :slip_code %>
    <%= form.text_field :slip_code %>
  <%end%>

  <%=tag_row do %>
    <%= form.label :status %>
    <%= form.select :status, Referral::Report::REPORT_STATUS %>
  <%end%>

  <%=tag_row do %>
    <%= form.label :ignored %>
    <%= form.select :ignored, Referral::Report::REPORT_IGNORED %>
  <%end%>

  <%=tag_row do %>
    <%= form.label :text, "Message" %>
    <%= form.text_field :text %>
  <%end%>

 <%5.times.each do |i|%>
  <%= tag_row do %>
    <%= form.label "field#{i+1}", Referral::Field.label(i+1) %>
    <%= form.text_field "field#{i+1}" %>
  <%end%>
 <% end %>


 
 


  <%=tag_row :class => "row_submit" do%>
    <%= form.submit "Save", :class => "btn btn-danger" %>
  <%end%>
<% end %>