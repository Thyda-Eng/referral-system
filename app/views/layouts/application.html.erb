<!DOCTYPE html>
<html >
	<head>
		<%= javascript_include_tag :defaults %> 
		<%= javascript_include_tag 'jquery-ui-1.8.12.custom.min' %> 
		<%= csrf_meta_tag %>  
	    <title><%= title %></title>
	    <%= render 'layouts/stylesheet' %>
	    <%= yield :head %>
	</head>
	<body>
		<div class="container">
			<%= render 'layouts/header' %>

			<div id="content" class="round">
                                <div id="div_notice">
                                      <% flash.each do |key, value| %>
                                      <div id="div_<%= key %>" class="round flash <%= key %>"><%= value %></div>
                                        <% break; %>
                                      <% end %>
                                </div>

				<%= yield %>
			</div>
			<br />
			<%= render 'layouts/footer' %>
		</div>      
	</body>
</html>

